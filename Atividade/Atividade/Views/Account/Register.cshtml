@model Atividade.ViewModel.Access.RegisterUserViewModel

@{
    ViewData["Title"] = "Register";
}
<div>
    <h1 class="display-4">Register</h1>
    <form method="post" asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" asp-valida class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="exampleInputPassword1" asp-for="Password"></label>
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label for="exampleInputPassword1" asp-for="ConfirmPassword"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confirm password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1" asp-for="Address"></label>
            <input type="text" asp-for="Address" class="form-control" placeholder="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-4">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" type="text" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" type="number" placeholder="Age" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group col-4">
                <label asp-for="Cpf"></label>
                <input id="txtCPF" asp-for="Cpf" class="form-control" type="text" placeholder="CPF"/>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
        <a class="btn btn-primary" href="/Home">Cancel</a>
    </form>
</div>
