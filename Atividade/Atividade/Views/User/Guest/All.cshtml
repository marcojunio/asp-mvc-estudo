@model IEnumerable<Atividade.ViewModel.Buffet.GuestViewModel>

@{
    ViewData["Title"] = "Guests";
}
<h1>List Guests</h1>

<div class="d-flex align-content-lg-start justify-content-between">
    <p>
        <a asp-action="Create">Create New</a> |
        <a asp-controller="User" asp-action="Menu">Back</a>
    </p>
    <form asp-action="Search" class="mb-2">
        <div class="input-group">
            <div class="form-outline">
                <input type="search" name="nameGuest" id="form1" placeholder="Name" class="form-control" />
            </div>
            <button type="submit" style="height:40px" class="btn btn-primary">
                Search
            </button>
        </div>
    </form>
</div>

<table class="table text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestSituation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Event.Descrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestSituation.Descrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Document)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
